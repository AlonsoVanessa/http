#
#   Http
#
defineComponent() {
    local path iflags libpaths

    path="$1"
    if [ "$path" != "" ] ; then
        libpaths=`probe --name libhttp --search "$path:$path/out/lib" "libhttp" `
        iflags=-I`probe --name http.h --search "$path:$path/src/include" "http.h"`
        if [ "$libpaths" = "" ] ; then
            warnComponent "http"
            return
        fi
    fi
    configureComponent --libs "http" --libpaths "$libpaths" --iflags "$iflags" \
        --optional-dependencies "regexp" http
}
