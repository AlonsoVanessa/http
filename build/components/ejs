#
#   Ejs
#
defineComponent() {
    local builtin deps iflags libs name optional path libpaths

    path="$1"

    path="$1"
    if [ "$path" != "" ] ; then
        libpaths=`probe --name libejs --search "$path:$path/out/lib" "libejs" `
        iflags=-I`probe --name ejs.h --search "$path:$path/src/include" "ejs.h"`
        if [ "$libpaths" = "" ] ; then
            warnComponent "ejs"
            return
        fi
    fi
    optional="ssl"
    if [ "$BLD_STATIC" = 1 ] ; then
        optional="$optional sqlite"
    else
        if [ "$BLD_FEATURE_EJS_ALL_IN_ONE" = 1 ] ; then
            if isdefined SQLITE ; then
                optional="$optional sqlite"
            fi
        fi
    fi
    deps="mpr http"
    withlibs="$withlibs pcre"
    libs="$libs pcre"

    configureComponent --libs "ejs $libs" --libpaths "$libpaths" --iflags "$iflags" --withlibs "$withlibs" \
        --dependencies "$deps" --optional-dependencies "$optional" ejs
}
