#
#   Mpr
#
defineComponent() {
    local libpaths iflags

    path="${1:-.}"
    iflags=-I`probe --name mpr --dir --warn --search "$path:$path/src/include" "mpr.h"`
    libpaths=`probe --name mpr --dir --search "$path:$path/out/lib" "libmpr"`
    if [ "$libpaths" = "" -a "$path" != "." ] ; then
        warnComponent mpr "Can't locate libmpr"
        return
    fi
    configureComponent --libs "mpr" --libpaths "$libpaths" --iflags "$iflags" mpr
}
